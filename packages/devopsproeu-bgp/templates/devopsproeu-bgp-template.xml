<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
              <id>{$LOCAL-AS}</id>
              <address-family>
                <ipv4>
                  <unicast/>
                </ipv4>
              </address-family>
              <neighbor>
                <id>{$REMOTE-ADRESS}</id>
                <remote-as>{$REMOTE-AS}</remote-as>
                <address-family>
                  <ipv4>
                    <unicast>
                      <route-policy>
                        <direction>in</direction>
                        <name>{$IN-POLICY}</name>
                      </route-policy>
                      <route-policy>
                        <direction>out</direction>
                        <name>{$OUT-POLICY}</name>
                      </route-policy>
                    </unicast>
                  </ipv4>
                </address-family>
              </neighbor>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config>